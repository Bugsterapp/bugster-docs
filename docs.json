{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Bugster",
  "logo": "logo/Bugster-Logo.png",
  "description": "Bugster is an AI tester that simulates a real user in a real browser, providing insights directly in your PR. It's designed for developers at VC-backed startups who want to ship with confidence without writing or maintaining flaky test suites.",
  "colors": {
    "primary": "#058BFF",
    "light": "#058BFF",
    "dark": "#058BFF"
  },
  "fonts": {
    "family": "figtree",
      "source": "https://cdn.jsdelivr.net/fontsource/fonts/figtree:vf@latest/latin-wght-normal.woff2",
      "format": "woff2",
    "heading":{
      "family": "Geist Mono Variable",
      "weight": 600,
      "source": "https://cdn.jsdelivr.net/fontsource/fonts/geist-mono:vf@latest/latin-wght-normal.woff2",
      "format": "woff2"
    },
    "body":{
      "family": "figtree",
      "source": "https://cdn.jsdelivr.net/fontsource/fonts/figtree:vf@latest/latin-wght-normal.woff2",
      "format": "woff2"
    }
  },
  "background":{
      "color": {
        "light": "#FFFFFF",
        "dark": "#383838"
      }
    },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "favicon": "/logo/Bugster-Logoicon-blue.svg",
  "thumbnails": {
    "background": "/images/thumbnail.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "installation",
              "quickstart"
            ]
          },
          {
            "group": "How-to Guides",
            "pages": [
              "guides/test-management/test-crud",
              "guides/customize-config-yaml",
              "guides/test-management/update-test-suite"
            ]
          },
          {
            "group": "CLI Commands",
            "pages": [
              "commands/overview",
              "commands/init",
              "commands/auth",
              "commands/generate",
              "commands/run",
              "commands/destructive-agent",
              "commands/update",
              "commands/advanced_configuration"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/github",
              "howto/vercel",
              "howto/railway"
            ]
          }
        ]
      },
      {
      "tab": "Changelog", 
      "icon": "newspaper",
        "groups": [
          {
            "group": "Changelog",
            "pages": [
                "changelog"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://discord.gg/fQtsfDmwNA",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://newsletter.bugster.dev",
          "icon": "newspaper"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/fQtsfDmwNA"
      }
    ],
    "primary": {
      "type": "button",
      "label": "START TESTING",
      "href": "https://www.bugster.dev/"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/Bugsterapp/bugster-cli"
    }
  }
}