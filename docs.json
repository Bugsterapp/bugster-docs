{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Bugster",
  "logo": "logo/Bugster-Logo.png",
  "description": "Bugster is an AI tester that simulates a real user in a real browser, providing insights directly in your PR. It's designed for developers at VC-backed startups who want to ship with confidence without writing or maintaining flaky test suites.",
  "colors": {
    "primary": "#383838",
    "light": "#383838",
    "dark": "#383838"
  },
    "contextual": {
      "options": [
        "copy",
        "view",
        "chatgpt",
        "claude",
        "perplexity"
      ]
    },
  "fonts": {
    "family": "figtree",
      "source": "https://cdn.jsdelivr.net/fontsource/fonts/figtree:vf@latest/latin-wght-normal.woff2",
      "format": "woff2",
    "heading":{
      "family": "Geist Mono Variable",
      "weight": 600,
      "source": "https://cdn.jsdelivr.net/fontsource/fonts/geist-mono:vf@latest/latin-wght-normal.woff2",
      "format": "woff2"
    },
    "body":{
      "family": "figtree",
      "source": "https://cdn.jsdelivr.net/fontsource/fonts/figtree:vf@latest/latin-wght-normal.woff2",
      "format": "woff2"
    }
  },
  "background":{
    "decoration": "windows",
      "color": {
        "light": "#FFFFFF",
        "dark": "#383838"
      }
    },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "favicon": "/logo/Bugster-Logoicon-blue.svg",
  "thumbnails": {
    "background": "/images/thumbnail.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "DOCS",
        "icon": "book",
        "groups": [
          {
            "group": "GETTING STARTED",
            "pages": [
              "index",
              "installation",
              "quickstart",
              "framework-compatibility"
            ]
          },
                      {
              "group": "GUIDES",
              "pages": [
                "guides/your-qa-roadmap",
                "guides/test-management/manage-tests",
                "guides/local-development",
                "guides/destructive-testing",
                "guides/test-management/credentials-and-roles",
                "guides/test-management/session-persistence",
                "guides/test-management/file-upload",
                "guides/configuration/customize-config-yaml",
                "guides/test-management/update-test-suite",
                "guides/cicd/cicd-integration",
                "guides/coding-agents/cursor",
                "guides/coding-agents/claude-code"
              ]
            },
          {
            "group": "USING THE CLI",
            "pages": [
              "commands/overview",
              "commands/interactive-mode",
              "commands/auth",
              "commands/init",
              "commands/generate",
              "commands/run",
              "commands/destructive-agent",
              "commands/update",
              "commands/plugin"
            ]
          },
          {
            "group": "HOSTING AND CI/CD",
            "pages": [
              "integrations/github",
              "integrations/vercel",
              "integrations/netlify",
              "integrations/railway",
              "integrations/github-actions",
              "integrations/custom",
              "integrations/cloud-build",
              "integrations/slack"
            ]
          }
        ]
      },
      {
      "tab": "CHANGELOG", 
      "icon": "rocket",
        "groups": [
          {
            "group": "CHANGELOG",
            "pages": [
                "changelog"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://discord.gg/fQtsfDmwNA",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://newsletter.bugster.dev",
          "icon": "newspaper"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/fQtsfDmwNA"
      }
    ],
    "primary": {
      "type": "button",
      "label": "START TESTING",
      "href": "https://www.bugster.dev/"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/Bugsterapp/bugster-cli"
    }
  }
}